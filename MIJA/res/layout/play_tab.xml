<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overall_background"
    android:orientation="vertical" >

    <!-- Screen Design for Play tab -->

    <EditText
        android:id="@+id/title"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:ems="10"
        android:text="Title1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:gravity="right"
        android:text="32:00 min"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/stt_button"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_above="@+id/title"
        android:background="@drawable/ic_stt"
        android:contentDescription="@string/stt_button" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stt_button"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22dip"
        android:layout_marginEnd="20dip" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stt_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="118dp"
        android:gravity="center"
        android:text="32:00 min"
        android:textColor="@android:color/white"
        android:textSize="70sp" />

</RelativeLayout>