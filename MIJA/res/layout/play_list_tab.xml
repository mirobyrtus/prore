<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollPlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overall_background"
    android:orientation="vertical" >

    <!-- Button Bar -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray" >

            <ImageButton
                android:id="@+id/record_button"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentLeft="true"
                android:background="@color/record_stop_red" />

            <ImageButton
                android:id="@+id/pause_button"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_marginLeft="90dip"
                android:background="@drawable/ic_pause" />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_marginLeft="175dip"
                android:background="@color/play_green" />

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_marginLeft="265dip"
                android:background="@color/record_stop_red" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="10" >

        </RelativeLayout>

        <ScrollView
            android:id="@+id/playListScrollView"
            android:layout_width="match_parent"
            android:layout_height="261dp" >

            <LinearLayout
                android:id="@+id/playListScrollViewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>