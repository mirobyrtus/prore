<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/overall_background"
    android:orientation="vertical" >

    <!-- Button Bar -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray" >

        <ImageButton
            android:id="@+id/record_button"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_record" />

        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_marginLeft="95dip"
            android:background="@drawable/ic_pause" />

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_marginLeft="185dip"
            android:background="@drawable/ic_play"
            android:onClick="" />
        
        <ImageButton
            android:id="@+id/stop_button"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_marginLeft="275dip"
            android:background="@drawable/ic_stop" />
    </RelativeLayout>
    
    <!-- Screen Design for article tab -->

	<dragndrop.DynamicListView
		android:id="@+id/dragndroplistview"
		android:background="#0000"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray" >

        <ImageButton
            android:id="@+id/email_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="5dip"
            android:onClick="OnShareViaEmail"
            android:src="@drawable/ic_mail" />

        <ImageButton
            android:id="@+id/add_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="70dip"
            android:onClick="Add"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/delete_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:onClick="DeleteBrick"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>

</LinearLayout>