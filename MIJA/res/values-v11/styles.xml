<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.Holo">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:actionBarStyle">@style/CustomActionBarTheme.ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/CustomActionBarTheme.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/CustomActionBarTheme.ActionBar.TabView</item>
        <item name="android:actionBarTabTextStyle">@style/CustomActionBarTheme.ActionBar.TabText</item>
        <item name="android:actionButtonStyle">@style/CustomActionBarTheme.ActionBar.ActionButton</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <!-- ActionBar styles -->

    <style name="CustomActionBarTheme.ActionBar" parent="@android:Widget.Holo.ActionBar">
        <item name="android:background">#c0c0c0</item>
        <item name="android:height">168dp</item>
    </style>

    <style name="CustomActionBarTheme.ActionBar.TabBar" parent="android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>

    <style name="CustomActionBarTheme.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">#c0c0c0</item>
    </style>

    <style name="CustomActionBarTheme.ActionBar.TabText" parent="android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomActionBarTheme.ActionBar.ActionButton" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:height">168px</item>
        <item name="android:width">168px</item>
        <item name="android:scaleX">4.2</item>
        <item name="android:scaleY">4.2</item>
    </style>

</resources>